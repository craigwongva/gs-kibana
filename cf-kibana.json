{
"AWSTemplateFormatVersion": "2010-09-09",
"Description": "",

"Mappings": {
  "EC2RegionMap": {
   "us-east-1": {"amazonlinuxami": "ami-9be6f38c"}
  }
},
"Parameters" : {
 "subnetId" : {
  "Type" : "String"
 },
 "securityGroupId" : {
  "Type" : "String"
 },
 "instancetype" : {
  "Type" : "String"
 }
},
"Resources": {
  "Server": {
   "Type": "AWS::EC2::Instance",
   "Properties": {
    "Tags" : [{
     "Key":"Name",
     "Value":"gsn-elasticsearch-int"
    }],
    "ImageId": {
     "Fn::FindInMap": [
      "EC2RegionMap", {
       "Ref": "AWS::Region"
      },
      "amazonlinuxami"
     ]
    },
    "InstanceType": {"Ref" : "instancetype"},
    "KeyName":  "kraig-vpc-2" ,
    "SubnetId": {"Ref" : "subnetid"},
    "SecurityGroupIds": [
     {"Ref" : "securityGroupId"}
    ],
    "IamInstanceProfile": "gsn-iam-KibanaRole",
    "UserData": {"Fn::Base64": {"Fn::Join": ["",
     [
"#!/bin/bash -ex\n",
"yum install git -y\n",
"sudo -u ec2-user bash -c 'cd /home/ec2-user; git clone https://github.com/craigwongva/gs-kibana.git > /tmp/u01 2>&1 '\n",
"sudo -u ec2-user bash -c 'cd /home/ec2-user/gs-kibana; ./userdata-kibana > /tmp/u02 2>&1'\n"
     ]
    ]}}
   }
  }
},
"Outputs" : {
  "InstanceID" : {
    "Description": "instance ID",  
    "Value" : { "Fn::GetAtt" : [ "Server" , "PublicIp" ] }
  }
}
}
